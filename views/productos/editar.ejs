<%- include("../header"); %>
<div class="col-12">
    <h1>Editar usuario</h1>
    <form method="post" action="/productos/actualizar">

        <input value="<%= producto.id %>" id="id" name="id" type="hidden"> 
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input value="<%= producto.nombre %>" required id="nombre" placeholder="Nombre del producto"
                class="form-control" type="text" name="nombre">
        </div>
        <div class="form-group">
            <label for="password">Contraseña</label>
            <input value="<%= producto.password %>" required id="password" placeholder="Contraseña del usuario"
                class="form-control" type="password" name="password">
        </div>
        <div class="form-group">
            <label for="admin">Roles</label>
            <input value="<%= producto.admin %>" required id="admin" placeholder="El rool del usuario"
                class="form-control" type="number" max="1" min="0" name="admin">
        </div>

        <div class="form-group">
            <button class="btn btn-success">Guardar</button>
            &nbsp;<a href="/productos" class="btn btn-primary">Volver</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>